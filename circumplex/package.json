{
  "name": "@kaliatech/circumplex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./src/*": "./src/*",
    ".": {
      "types": "./dist/Circumplex.d.ts",
      "import": "./dist/circumplex.es.js",
      "require": "./dist/circumplex.umd.js"
    }
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write . --ignore-path ../.prettierignore --cache-location ../node_modules/.cache/circumplex/prettier",
    "test": "vitest ."
  },
  "dependencies": {
    "colorjs.io": "^0.5.2",
    "pixi.js": "^8.8.0"
  },
  "devDependencies": {
    "@eslint/js": "*",
    "@types/node": "*",
    "eslint": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-react-refresh": "*",
    "globals": "*",
    "prettier": "*",
    "prettier-plugin-jsdoc": "*",
    "typescript": "*",
    "typescript-eslint": "*",
    "vite": "*",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "*"
  }
}
